GerenciarTelas:
    Home:
        name:'tela1'

<Home>:
    id:       
    BoxLayout:
        orientation: "vertical"
        padding: root.width * 0.20, root.height * 0.1
        canvas:
            Color:
                rgba: 0.97,0.97,0.97,0.97
            Rectangle:
                pos:self.pos
                size:self.size
        BoxLayout:
            orientation:"vertical"
            Image:
                source: "data/logo.png"
        Label:
            id: word_label
            text_size: self.size
            color: 0,0,0,1
            halign: "center"
            valign: "middle"
            text: "Enter a name"
            font_size: 32
        TextInput:
            id: word_input
            multiline: False
            size_hint: (1, .5)
        Label:
            id: word2_label
            text_size: self.size
            color: 0,0,0,1
            halign: "center"
            valign: "middle"
            text: "Enter a number"
            font_size: 32
        TextInput:
            id: word2_input
            multiline: False
            size_hint: (1, .5)

        ButtonMenu:
            size_hint: (1, .5)
            font_size: 32
            text: "submit"
            on_press: app.submit()

        ButtonMenu:
            size_hint: (1, .5)
            font_size: 32
            text: "show records"
            on_press: app.show_records()

<ButtonMenu@ButtonBehavior+Label>:
    canvas.before:
        Color:
            rgba: 0.1, 0.5, 0.7, 0.9
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20]
    size_hint: None, None  # Desativa o uso de proporção para tamanho
    size: 200, 50  # Define um tamanho exato para o botão
